@using Speculum.ViewModel.Machine
@model MachineViewModel

<div class="app-content content">
	<div class="content-overlay"></div>
	<div class="header-navbar-shadow"></div>
	<div class="content-wrapper">
		<div class="content-header row">
			<h1> الماكينات</h1>
		</div>
		<div class="content-body">
			<section id="dashboard-analytics">
				<div class="row">

					<div class="table-responsive">
						<div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 col-12">
							<div class="row">
								<div class="col-12">
									<table class="table xxx table-striped dataex-html5-selectors" id="MachineTable" role="grid" aria-describedby="DataTables_Table_0_info">
										<thead>
											<tr role="row">
												<th scope="col">رقم الماكينة</th>
												<th scope="col"> اسم الماكينة</th>
												<th scope="col">النوع</th>

												<th scope="col">تعديل</th>
												<th scope="col">حذف</th>
											</tr>
										</thead>
										<tbody>

											@foreach (var machine in Model.GetMachines)
											{
												<tr data-id="@machine.Id" data-name="@machine.Name"
													data-type="@machine.MachineType" role="row" class="odd id-@machine.Id">
													<td>@machine.Id</td>
													<td class="Machine-Name">@machine.Name</td>
													<td class="Machine-Type">@machine.MachineType</td>
													<td><a class="feather icon-edit-1 edit-btn"></a></td>
													<td><a class="btn trash delete-machine" style="color:red"><i class="fa fa-remove"></i></a></td>
												</tr>
											}
									</table>
								</div>
							</div><div class="row"><div class="col-sm-12 col-md-5"></div><div class="col-sm-12 col-md-7"><div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate"></div></div></div>
						</div>
					</div>


				</div>
			</section>

			<a class="AddButton add-btn"
			   data-toggle="tooltip"
			   data-original-title="إضافة ماكينة"
			   data-placement="top">
	    	   <i class="fa fa-plus my-float"></i>
			</a>

			<div class="modal fade" id="MachineModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-modal="true" style="padding-right: 17px; display: none;">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 style="color:#5347d0" class="modal-title" id="exampleModalLongTitle">إضافة ماكينة</h5>
							<button id="Exit" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">×</span>
							</button>
						</div>
						<form id="FormMachine">
							<div class="modal-body">
								<div class="row">
									<div class="form-group col-6">
										<label asp-for="Name">اسم الماكينة</label>
										<input asp-for="Name" id="machine-name" class="form-control" />
									</div>
									<div class="form-group col-6">
										<label asp-for="machineType">نوع الماكينه</label>
										<input asp-for="machineType" id="machine-type" class="form-control" />
									</div>

								</div>
							</div>

							<div class="modal-footer">
								<button class="btn btn-primary waves-effect waves-light save-btn">حفظ</button>
								<button data-dismiss="modal" class="btn btn-danger waves-effect waves-light">إغلاق</button>
							</div>
							<input id="Id" asp-for="Id" hidden />
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts{

	<script src="~/assets/lib/js/datatable/datatablesinarabic.js"></script>
	<script src="~/assets/lib/js/datatable/datatables.min.js"></script>
	<script src="~/assets/lib/js/datatable/datatables.bootstrap4.min.js"></script>
	<script src="~/js/Views/Machine/machine.js"></script>	

}