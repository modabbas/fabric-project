@using Speculum.ViewModel.Account
@model AccountViewModel

@{
	Layout = null;
	var returnUrl = @Context.Request.Query["returnUrl"];
}
	<head>
		<title> تسجيل الدخول</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta charset="utf-8" />
		<!-- BEGIN: Vendor CSS-->
		<link rel="stylesheet" type="text/css" href="~/lib/Log_Reg/css/vendors-rtl.min.css">
		<link rel="stylesheet" type="text/css" href="~/lib/Log_Reg/css/charts/apexcharts.css">
		<link rel="stylesheet" type="text/css" href="~/lib/Log_Reg/css/extensions/tether-theme-arrows.css">
		<link rel="stylesheet" type="text/css" href="~/lib/Log_Reg/css/extensions/tether.min.css">
		<link rel="stylesheet" type="text/css" href="~/lib/Log_Reg/css/extensions/shepherd-theme-default.css">
		<!-- END: Vendor CSS-->
		<!-- BEGIN: Theme CSS-->
		<link rel="stylesheet" type="text/css" href="~/lib/css/bootstrap.css">
		<link rel="stylesheet" type="text/css" href="~/lib/css/bootstrap-extended.css">
		<link rel="stylesheet" type="text/css" href="~/lib/css/colors.css">
		<link rel="stylesheet" type="text/css" href="~/lib/css/components.css">
		<!-- End: Theme CSS-->
		<!-- BEGIN: Page CSS-->
		<link rel="stylesheet" type="text/css" href="~/lib/css/core/vertical-menu.css">
		<link rel="stylesheet" type="text/css" href="~/lib/css/core/palette-gradient.css">
		<link rel="stylesheet" type="text/css" href="~/lib/css/pages/dashboard-analytics.css">
		<link rel="stylesheet" type="text/css" href="~/lib/css/pages/card-analytics.css">
		<link rel="stylesheet" type="text/css" href="~/lib/css/plugins/tour.css">
		<!-- END: Page CSS-->
		<!-- BEGIN: Custom CSS-->
		<link rel="stylesheet" type="text/css" href="~/lib/css/custom.css">
		<link rel="stylesheet" type="text/css" href="~/lib/css/mystyles.css">
		<!-- END: Custom CSS-->
		<!-- BEGIN: Authentication CSS-->
		<link rel="stylesheet" type="text/css" href="~/lib/css/authentication.css">
		<!-- End: Authentication CSS-->

	</head>

<body class="vertical-layout vertical-menu-modern 1-column  navbar-floating footer-static bg-full-screen-image  blank-page blank-page" data-open="click" data-menu="vertical-menu-modern" data-col="1-column">
	<!-- BEGIN: Content-->
	<div class="app-content content">
		<div class="content-overlay"></div>
		<div class="header-navbar-shadow"></div>
		<div class="content-wrapper">
			<div class="content-header row">
			</div>
			<div class="content-body">
				<section class="row flexbox-container">
					<div class="col-xl-12 col-12 d-flex justify-content-center">
						<div class="card bg-authentication rounded-0 mb-0">
							<div class="row m-0">
								<div>
									<div class="card rounded-0 mb-0 px-2">
										<div class="card-header pb-1">
											<div class="card-title">
												<h4 class="mb-0">صفحة تسجيل الدخول</h4>
											</div>
										</div>
										<div class="card-content">
											<div class="card-body pt-1">
												<form asp-controller="Account"
													  asp-action="Login"
													  asp-route-returnUrl="@returnUrl"
													  method="post">
													<fieldset class="form-label-group form-group position-relative has-icon-left">
														<input asp-for="UserName" type="text" class="form-control" placeholder="اسم المستخدم" required>
														<div class="form-control-position">
															<i class="feather icon-user"></i>
														</div>
														<label for="user-name">اسم المستخدم</label>
													</fieldset>
													<input hidden />

													<fieldset class="form-label-group position-relative has-icon-left">
														<input asp-for="Password" type="password" class="form-control" id="user-password" placeholder="كلمة السر" required>
														<div class="form-control-position">
															<i class="feather icon-lock"></i>
														</div>
														<label for="user-password">كلمة السر</label>
													</fieldset>
													<div class="form-group d-flex justify-content-between align-items-center">
														<div class="text-left">
															<fieldset class="checkbox">
																<div class="vs-checkbox-con vs-checkbox-primary">
																	<input asp-for="RememberMe" type="checkbox">
																	<span class="vs-checkbox">
																		<span class="vs-checkbox--check">
																			<i class="vs-icon feather icon-check"></i>
																		</span>
																	</span>
																	<span class="">تذكرني</span>
																</div>
															</fieldset>
														</div>
													</div>
													<button style="margin-left:60px;" type="submit" class="btn btn-primary float-right btn-inline">دخول</button>
												</form>
											</div>
										</div>
										<div class="login-footer">
											<div style="color:red" asp-validation-summary="All">
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</div>
	</div>


	<!--Begin JQuery JS-->
	<script src="~//lib/js/core/jquery.min.js"></script>
	<!--Begin JQuery JS-->
	<!-- BEGIN: Vendor JS-->
	<script src="~/lib/js/vendors.min.js"></script>
	
	<script src="~/lib/js/apexcharts.min.js"></script>

	<script src="~/lib/js/tether.min.js"></script>

	<script src="~/lib/js/core/app-menu.js"></script>
	<script src="~/lib/js/core/app.js"></script>
	<script src="~/lib/js/script/components.js"></script>
	<!-- END: Theme JS-->
	<!-- BEGIN: Page JS-->
	<script src="~/Dashboard/lib/js/script/dashboard-analytics.js"></script>
	<!-- END: Page JS-->

</body>