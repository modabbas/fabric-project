@using Speculum.ViewModel.CustomerOrderDetail
@model CustomerOrderDetailsViewModel

<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <h1>  الطلبيات الموجودة في الماكينات   </h1>
        </div>
        <div class="content-body">
            <section id="dashboard-analytics">
          

            




                <div class="row">
                
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 col-12">
                            <div class="row">
                                <div class="col-12">
                                    <table class="table xxx table-striped dataex-html5-selectors" id="categoryTable" role="grid" aria-describedby="DataTables_Table_0_info">
                                        <thead>
                                            <tr role="row">
                                                <th scope="col"> الرقم الطلبية الاصلية</th>
                                                <th scope="col">نوع القماش</th>
                                                <th scope="col">   الزبون</th>
                                                <th scope="col"> وزن القماش الفرعي</th>
                                                <th scope="col">تاريخ تسجيل الطلبية</th>
                                                <th scope="col">  لون الجديد</th>
                                                <th scope="col">   كمية اللون اللون</th>
                                                <th scope="col">     طول القديم</th>

                                                <th scope="col">انتهاء المرحلة</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var customerOrder in Model.OrdersInMachineDetails)
                                            {
                                                <tr role="row" class="odd">
                                                    <td class="nameAr">@customerOrder.Id</td>
                                                    <td class="nameEng">@customerOrder.ClothName</td>
                                                    <td class="nameEng">@customerOrder.CustomerName</td>
                                                    <td class="nameEng">@customerOrder.PartialWeghit</td>
                                                    <td class="nameEng">@customerOrder.CreatedAt</td>
                                                    <td class="nameEng">@customerOrder.ColorName</td>
                                                    <td class="nameEng">@customerOrder.ColorAmount</td>
                                                    <td class="nameEng">@customerOrder.OldLenght</td>

                                                    <td><a type="submit" class="btn trash" style="color:red" asp-controller="CustomerOrderDetail" asp-action="RemoveOrderFromMachine" asp-route-id="@customerOrder.Id"><i class="feather icon-edit-1"></i></a></td>
                                                </tr>
                                            }

                                    </table>
                                </div>
                            </div><div class="row"><div class="col-sm-12 col-md-5"></div><div class="col-sm-12 col-md-7"><div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate"></div></div></div>
                        </div>
                    </div>


                </div>


            </section>



    </div>
    </div>
</div>




@section Scripts{

    <script src="~/assets/lib/js/datatable/datatablesinarabic.js"></script>
    <script src="~/assets/lib/js/datatable/datatables.min.js"></script>
    <script src="~/assets/lib/js/datatable/datatables.bootstrap4.min.js"></script>

}